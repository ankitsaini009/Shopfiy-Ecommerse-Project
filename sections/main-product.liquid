              <li>
                <span>Availability:</span>
                <div class="stock__checkbox">
                  <label for="stockin">
                    {% if product.available %}
                      In Stock
                    {% else %}
                      Out of Stock
                    {% endif %}
                    <input
                      type="checkbox"
                      id="stockin"
                      {% if product.available %}
                        checked
                      {% endif %}
                      disabled
                    >
                    <span class="checkmark"></span>
                  </label>
                </div>
              </li>

              <!-- Available Color -->
              <li>
                <span>Available color:</span>
                <div class="color__checkbox">
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      <label for="color-{{ variant.id }}">
                        <input
                          type="radio"
                          name="color__radio"
                          id="color-{{ variant.id }}"
                          {% if variant.id == product.selected_or_first_available_variant.id %}
                            checked
                          {% endif %}
                        >
                        <span class="checkmark" style="background-color: {{ variant.option1 | downcase }};"></span>
                      </label>
                    {% endif %}
                  {% endfor %}
                </div>
              </li>

              <!-- Available Size -->
              <li>
                <span>Available size:</span>
                <div class="size__btn">
                  {% assign sizes = product.options_with_values | where: 'name', 'Size' %}
                  {% for size in sizes[0].values %}
                    <label for="size-{{ size | downcase }}">
                      <input
                        type="radio"
                        id="size-{{ size | downcase }}"
                        name="size__radio"
                        value="{{ size | downcase }}"
                        {% if size == product.selected_or_first_available_variant.option2 %}
                          checked
                        {% endif %}
                      >
                      {{ size }}
                    </label>
                  {% endfor %}
                </div>
              </li>

              <!-- Promotions -->
