<script>

  document.querySelectorAll('.compare-button').forEach((button) => {
  button.addEventListener('click', function (event) {
    // Get product ID from button's data attribute
    var productId = event.target.getAttribute('data-product-id');
    
    // Fetch the comparison list from localStorage or initialize an empty array
    var compareList = JSON.parse(localStorage.getItem('compareList')) || [];
    
    // Check if the product is already in the list
    if (!compareList.includes(productId)) {
      compareList.push(productId); // Add product ID if not already present
      localStorage.setItem('compareList', JSON.stringify(compareList)); // Save updated list
      alert('Product added to comparison list!');
    } else {
      alert('This product is already in the comparison list.');
    }
  });
});
  
  document.addEventListener("DOMContentLoaded", function () {
  const wishlistBtns = document.querySelectorAll('.wishlist-btn');

  wishlistBtns.forEach((btn) => {
    btn.addEventListener('click', function () {
      const productId = this.dataset.productId;
      let wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

      // Toggle wishlist
      if (wishlist.includes(productId)) {
        wishlist = wishlist.filter(id => id !== productId);
        alert('Product removed from wishlist!');
        window.location.reload();
      } else {
        wishlist.push(productId);
        alert('Product added to wishlist!');
        window.location.reload();
      }

      localStorage.setItem('wishlist', JSON.stringify(wishlist));
    });
  });
});

  document.addEventListener("DOMContentLoaded", function () {
  const wishlist = JSON.parse(localStorage.getItem('wishlist')) || [];

  wishlist.forEach(productId => {
     const heartIcon = document.querySelector(`.wishlist-btn[data-product-id="${productId}"] svg`);
    if (heartIcon) {
      heartIcon.style.fill = 'red'; // Change SVG icon color to red
    }
  });
});
</script>

