            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
          </div>
          <div class="product__details__price">
            {{ product.price | money }}
            {% if product.compare_at_price > product.price %}
              <span>$ {{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>

          <p>
            {{ product.description | escape | strip_html }}
          </p>

