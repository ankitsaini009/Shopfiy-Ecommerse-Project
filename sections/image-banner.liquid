<section class="categories">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 p-0">
        <div class="categories__item categories__large__item set-bg"
          {% if section.settings.category_1_image %}
            data-setbg="{{ section.settings.category_1_image | image_url }}"
          {% else %}
            data-setbg="{{ 'category-1.jpg' | asset_url }}"  <!-- Static fallback image for category 1 -->
          {% endif %}>
         
          <div class="categories__text">
            <h1>{{ section.settings.category_1_title | default: "Default Category" }}</h1>
            <p>{{ section.settings.category_1_description | default: "Sit amet, consectetur adipiscing elit." }}</p>
