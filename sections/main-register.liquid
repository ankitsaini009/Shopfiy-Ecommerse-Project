{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .customer.register {
    background-color: #f8f9fa;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .customer.register h1 {
    font-size: 2rem;
    font-weight: 700;
  }

  .customer.register .form-floating label {
    color: #6c757d;
  }



  .customer.register .btn-primary {
    border-color: #007bff;
    font-size: 1rem;
    font-weight: 600;
  }
{%- endstyle -%}
<!-- Bootstrap CSS -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha512-HG2GT10Kfwaz3YhFjD0GzTP0J5/u48uBQn8htcXY/hknv4psGSxYFQ/R/m+/sh9oyBY/yZQzAzO2iUQ1RCBfXA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="customer register py-5 px-3" style="margin-top: 32px;">
  <div class="container">
    <h1 class="text-center mb-4" style="font-size:32px">
      {{ 'customer.register.title' | t }}
    </h1>

    {%- form 'create_customer', novalidate: 'novalidate' -%}
      <!-- Error Handling -->
      {%- if form.errors -%}
        <div class="alert alert-danger" role="alert">
          <h2 class="h5">
            <i class="bi bi-exclamation-circle-fill"></i>
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
          <ul class="mb-0">
            {%- for field in form.errors -%}
              <li>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- else -%}
                  <a href="#RegisterForm-{{ field }}">
                    {{ form.errors.translated_fields[field] | capitalize }}: {{ form.errors.messages[field] }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      <!-- Registration Form -->
      <div class="row g-3">
        <!-- First Name -->
        <div class="col-md-6">
          <div class="form-floating1">
            <label for="RegisterForm-FirstName"  style="font-size:14px;">
              {{ 'customer.register.first_name' | t }}
            </label>
            <input
              type="text"
              name="customer[first_name]"
              id="RegisterForm-FirstName"
              class=" {% if form.errors['first_name'] %}is-invalid{% endif %}"
              {% if form.first_name %}
                value="{{ form.first_name }}"
              {% endif %}
              autocomplete="given-name"
              placeholder="{{ 'customer.register.first_name' | t }}"
               style="width:100%; font-size:14px;padding:8px 6px;border:1px solid black;border-radius:4px;box-shadow:none"
            >

            {%- if form.errors.first_name -%}
              <div class="invalid-feedback">
                {{ form.errors.translated_fields.first_name | capitalize }}: {{ form.errors.messages.first_name }}
              </div>
            {%- endif -%}
          </div>
        </div>

        <!-- Last Name -->
        <div class="col-md-6">
          <div class="form-floating1">
            <label for="RegisterForm-LastName"  style="font-size:14px;">
              {{ 'customer.register.last_name' | t }}
            </label>
            <input
              type="text"
              name="customer[last_name]"
              id="RegisterForm-LastName"
              class="{% if form.errors['last_name'] %}is-invalid{% endif %}"
              {% if form.last_name %}
                value="{{ form.last_name }}"
              {% endif %}
              autocomplete="family-name"
              placeholder="{{ 'customer.register.last_name' | t }}"
               style="width:100%; font-size:14px;padding:8px 6px;border:1px solid black;border-radius:4px;box-shadow:none"
            >

            {%- if form.errors.last_name -%}
              <div class="invalid-feedback">
                {{ form.errors.translated_fields.last_name | capitalize }}: {{ form.errors.messages.last_name }}
              </div>
            {%- endif -%}
          </div>
        </div>

        <!-- Email -->
        <div class="col-md-6">
          <div class="form-floating1">
            <label for="RegisterForm-email"  style="font-size:14px;">
              {{ 'customer.register.email' | t }}
            </label>
            <input
              type="email"
              name="customer[email]"
              id="RegisterForm-email"
              class=" {% if form.errors['email'] %}is-invalid{% endif %}"
              {% if form.email %}
                value="{{ form.email }}"
              {% endif %}
              spellcheck="false"
              autocapitalize="off"
              autocomplete="email"
              aria-required="true"
              placeholder="{{ 'customer.register.email' | t }}"
              style="width:100%; font-size:14px;padding:8px 6px;border:1px solid black;border-radius:4px;box-shadow:none"
            >

            {%- if form.errors.email -%}
              <div class="invalid-feedback">
                {{ form.errors.translated_fields.email | capitalize }}: {{ form.errors.messages.email }}
              </div>
            {%- endif -%}
          </div>
        </div>

        <!-- Password -->
        <div class="col-md-6">
          <div class="form-floating1">
            <label for="RegisterForm-password"  style="font-size:14px;">
              {{ 'customer.register.password' | t }}
             
            </label>
            <input
              type="password"
              name="customer[password]"
              id="RegisterForm-password"
              class="{% if form.errors['password'] %}is-invalid{% endif %}"
              aria-required="true"
              placeholder="{{ 'customer.register.password' | t }}"
               style="width:100%; font-size:14px;padding:8px 6px;border:1px solid black;border-radius:4px; box-shadow:none"
            >
            {%- if form.errors.password -%}
              <div class="invalid-feedback">
                {{ form.errors.translated_fields.password | capitalize }}: {{ form.errors.messages.password }}
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-4 text-center">
        <button type="submit" class="btn btn-danger px-4" style="width:100% ; --buttons-border-opacity: 0;">
          {{ 'customer.register.submit' | t }}
        </button>
      </div>
      <div class="text-center mt-3" style="font-size:16px;">
        Have an account?
        <a href="https://ashion-store-ind.myshopify.com/account/login" class="btn btn-link">Go To Login</a>
      </div>
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-register.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
